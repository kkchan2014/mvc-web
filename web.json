{
  "port": 8080,
  "debug": true,
  "headers": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Credentials": "true"
  },
  "areas": {
    "default": {
      "path": "./areas/default"
    }
  },
  "pages": {
    "404": {
      "code": 404,
      "path": "",
      "message": "找不到此页面"
    },
    "500": {
      "code": 500,
      "path": "",
      "message": "程序访问出现错误"
    }
  },
  "resources": {
    "base": "/",
    "pattern": "?ver=20190423",
    "static": {
      "/assets": "./assets",
      "/favicon.ico": "./favicon.ico"
    }
  },
  "routes": {
    "default": {
      "url": "/:_area?/:_controller?/:_action?/:id?",
      "defaults": {
        "_area": "default",
        "_controller": "home",
        "_action": "index",
        "id": ""
      }
    }
  }
}